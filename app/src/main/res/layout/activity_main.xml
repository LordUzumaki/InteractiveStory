<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        tools:visibility="visible">


    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="726dp"
        android:layout_height="868dp"
        android:scaleType="centerCrop"
        android:src="@drawable/heart_of_this_forest"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ancient_forest" />

    <TextView
        android:id="@+id/narrativeTextView"
        android:layout_width="360dp"
        android:layout_height="593dp"
        android:backgroundTint="?android:attr/windowSplashScreenBackground"
        android:text="Your story text here"
        android:textColor="#F7F7F8"
        android:textSize="16sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.34"
        tools:visibility="visible" />

    <Button
        android:id="@+id/choiceButton1"
        android:layout_width="164dp"
        android:layout_height="78dp"
        android:layout_weight="1"
        android:backgroundTint="@color/black"
        android:text="@string/Humorous"
        android:textColor="@color/Red"
        android:textSize="14sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/choiceButton2"
        app:layout_constraintHorizontal_bias="0.303"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="visible" />


    <Button
        android:id="@+id/choiceButton2"
        android:layout_width="159dp"
        android:layout_height="77dp"
        android:layout_marginEnd="16dp"
        android:layout_weight="1"
        android:backgroundTint="@color/black"
        android:text="@string/Mysterious"
        android:textColor="@color/Red"
        android:textSize="14sp"
        android:visibility="visible"
        android:src="@drawable/ancient_forest"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>
